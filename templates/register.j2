            <a class="nav-item nav-link active" href="{{url_for('login')}}">Log in</a>
                <div>
                  {{ form.confirm_password.label(class="form-control-label") }}
                  {{form.confirm_password(class="form-control" + (" is-invalid" if form.password.errors else ""))}}
                  {% if form.confirm_password.errors %}
                    {% for error in form.confirm_password.errors %}
                      <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-4">
                {{ form.submit() }}
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-4">
      </div>
    </div>
{% endblock %}